<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="4dp"
    >
    <item>
        <shape
            android:shape="rectangle"
            android:useLevel="false"
            >

            <stroke
                android:color="@color/berakhlak"
                android:width="4dp"
                />

            <size
                android:width="24dp"
                android:height="24dp"
                />
            <corners
                android:radius="5dp"
                />

        </shape>
    </item>

    <item
        android:top="6dp"
        android:bottom="6dp"
        android:left="6dp"
        android:right="6dp">

        <shape
            android:shape="rectangle"
            android:useLevel="false"
            >
            <corners android:radius="3dp"
                />
            <solid android:color="@color/berakhlak"/>
        </shape>

    </item>
</layer-list>